{% extends 'base.html.twig' %}

{% block title %}Trails index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Trails index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for trail in trails %}
                <tr>
                    <td>{{ trail.id }}</td>
                    <td>{{ trail.name }}</td>
                    <td>
                        <a href="{{ path('trails_show', {'id': trail.id}) }}">show</a>
                        <a href="{{ path('trails_edit', {'id': trail.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('trails_new') }}" class="btn btn-success">Créer un nouveau thème</a>
    </div>
{% endblock %}
