{% extends 'base.html.twig' %}


{% block body %}
    <div class="container contact-title">
        <h2>Contactez-nous</h2>
    </div>
    <div class="ps-5 pe-5 contact-form">
        <div class="form-group">
            {{ form_start(our_form) }}
            {{ form_row(our_form.fullName, {'attr': {'class': 'form-control'}}) }}


        </div>
        <div class="form-group">
            {{ form_row(our_form.email, {'attr': {'class': 'form-control'}}) }}

        </div>
        <div class="form-group">
            {{ form_row(our_form.message, {'attr': {'class': 'form-control'}}) }}

        </div>

        <div class="form-group submit-container">
            <input type="submit" value="Envoyer" class="btn btn-primary py-3 px-5">
        </div>
        {{ form_end(our_form) }}
    </div>

    </div>
    <script src="{{ asset('js/menu-contact.js') }}"></script>
{% endblock %}