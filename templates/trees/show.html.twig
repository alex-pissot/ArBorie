{% extends 'base.html.twig' %}

{% block title %}Trees{% endblock %}

{% block body %}
    <h1>Trees</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tree.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ tree.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tree.description }}</td>
            </tr>
            <tr>
                <th>PlantingYear</th>
