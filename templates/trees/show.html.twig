            </tr>
            <tr>
                <th>Image</th>
                <td>{{ tree.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('trees_index') }}">back to list</a>

    <a href="{{ path('trees_edit', {'id': tree.id}) }}">edit</a>

